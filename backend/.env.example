# DocuMaker Backend Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
# Use your Supabase connection string or local PostgreSQL
DATABASE_URL=postgresql://username:password@host:port/database_name

# JWT Authentication
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI Services (Optional - for resume content generation)
OPENAI_API_KEY=your-openai-api-key
OPENROUTER_API_KEY=your-openrouter-api-key

# Microsoft SSO Configuration (Optional)
MICROSOFT_CLIENT_ID=your-azure-app-client-id
MICROSOFT_CLIENT_SECRET=your-azure-app-secret
MICROSOFT_TENANT_ID=your-azure-tenant-id

# Development Settings
DEBUG=true
CORS_ORIGINS=["http://localhost:5173"]

# File Upload Settings
MAX_FILE_SIZE_MB=10
UPLOAD_DIR=./uploads

# Email Configuration (Future use)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
